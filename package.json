  "scripts": {
    "build": "npm run build:components",
    "build:components": "npx webpack --mode production --env target=components",
    "build:docs": "npx webpack --mode production --env target=docs",
    "dev": "npm run storybook",
    "dev:docs": "npx webpack serve --mode development --env target=docs",
    "dev:components": "npx webpack --mode development --env target=components --watch",
    "serve": "npx webpack serve --mode development --env target=docs --open",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "predeploy": "npm run build:docs && npm run build-storybook && node scripts/prepare-deploy.js",
    "deploy": "gh-pages -d deploy"
  }
